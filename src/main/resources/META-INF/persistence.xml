<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="1.0">
    <persistence-unit name="Exercicio-consulta">
        <class>com.ifpb.model.Area</class>
        <class>com.ifpb.model.Escritor</class>
        <class>com.ifpb.model.Publicacao</class>
        <class>com.ifpb.model.Revisor</class>
        <class>com.ifpb.model.Pessoa</class>
        <class>com.ifpb.converters.LocalDateConverter</class>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/Exercicio-consulta" ></property>
            <property name="javax.persistence.jdbc.user" value="postgres" />
            <property name="javax.persistence.jdbc.password" value="123" />
            <property name="eclipselink.deploy-on-startup" value="true" />
            <property name="javax.persistence.schema-generation.database.action" value="drop-and-create" />
        </properties>
    </persistence-unit>
</persistence>